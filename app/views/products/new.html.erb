<div class="container form-container">
 <% new_product = Product.new %>
 <%= simple_form_for(new_product) do |f| %>
   <div class="form-top">
    <%= f.input :name, label: 'Nom', placeholder: "Nom du produit" %>
    <%= f.number_field :price_cents, label: "Prix (en centimes)"%>
    <%= f.input :sku, label: 'Référence (SKU)', placeholder: "Référence du produit" %>
    <%= f.input :description, label: 'Ajoutez une description', as: :text, placeholder: "Rédiger ici la description du produit..." %>
    <div class="d-flex">
      <%= f.input :cover, label: 'Ajoutez une photo de couverture', as: :file %>
      <%= f.input :photo, label: 'Ajoutez une seconde photo', as: :file %>
    </div>
   </div>
   <div class="form-button">
    <%= f.submit "Créer le produit", class: 'btn btn-primary' %>
   </div>
 <% end %>
</div>

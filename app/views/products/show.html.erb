
<div class= "container" style="margin-top: 100px;">
  <div class= "product">
    <div class= "product-illustration">
     <%= cl_image_tag @product.photo.key %>
     <%= cl_image_tag @product.cover.key %>
    </div>
    <div class= "product-description">
      <div class= "description">
        <h1><%= @product.name %></h1>
        <h3><%= @product.description %></h3>
        <h3><%= @product.brand %></h3>
        <% if @product.quantity == 0 %>
          <p>ce produit n'est pas disponible actuellement.</p>
        <% end %>
      </div>
      <div class= "price">
        <h3><%= @product.price%>€</h3>
        <div id="button-product-show">
          <%= link_to line_items_path(product_id: @product.id), method: :post do %>
            <button>Ajoutez à votre panier</button>
          <% end %>
        </div>
      </div>
      <div>
        <% if user_signed_in? %>
          <br>
          <ul>
            <%= link_to edit_product_path(@product), class: "py-2 px-4 ml-2 bd-highlight bg-light rounded" do %>
              <i class="fas fa-pencil-alt"></i> Edit
            <% end %>
            <%= link_to product_path(@product), method: :delete, class: "py-2 px-4 ml-2 bd-highlight bg-light rounded",data: { confirm: "Etes vous sûre ?" } do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to "retour à la boutique", :back, style:"color: black;" %>
</div>

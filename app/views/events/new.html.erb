<div class="container form-container" style="margin-top: 100px;">
 <% new_event = Event.new %>
 <%= simple_form_for(new_event) do |f| %>
   <div class="form-top">
    <%= f.input :title, label: 'Titre', placeholder: "Titre de l'évènement ou de l'atelier" %>
    <%= f.input :description, label: 'Ajoutez une description', as: :text, placeholder: "Rédiger ici la description de l'évènement..." %>
    <div class="d-flex">
      <%= f.input :cover, label: 'Ajoutez une photo de couverture', as: :file %>
    </div>
    <div>
      <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Statut de l'évènement</label>
      <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
        <option selected>Choose...</option>
        <option value="true">à venir</option>
        <option value="false">passé</option>

      </select>
    </div>
   </div>
   <div class="form-button">
    <%= f.submit "Créer un évènement", class: 'btn btn-primary' %>
   </div>
 <% end %>
</div>

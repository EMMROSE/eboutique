<%= simple_form_for @order do |f| %>
  <div class="form-top">
    <%= f.input :fullname, label: false, placeholder: 'Votre prénom & nom de famille' %>
    <%= f.input :phone, label: false, placeholder: 'n° de téléphone' %>
    <%= f.input :email, label: false, placeholder: 'email' %>
    <%= f.input :address, label: false, placeholder: 'adresse de livraison' %>
    <%= f.input :zip_code, label: false, placeholder: 'Code postal' %>
    <%= f.input :city, label: false, placeholder: 'Ville' %>
    <div>
      <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Mode de retrait</label>
      <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
        <option selected>Choose...</option>
        <option value="true">En livraison (+ 5.00€ de frais)</option>
        <option value="false">A retirer en boutique</option>

      </select>
    </div>
  </div>
  <div>
    <span>
      Total de votre commande:
    </span>
    <span>
      <% if @order.delivery  %>
        <%= @cart.shipping %> €
      <% else %>
        <%= @cart.sub_total %> €
      <% end %>
    </span>
  </div>
    <%= f.submit 'confirmer', class: "btn btn-primary"%>
<% end %>


<div class="cards" style="margin-top: 100px;">
  <% @products.each do |product| %>
    <% if product.quantity > 0 %>
      <div class="wrapper">
        <div class="top">
          <%= link_to product_path(product) do %>
            <span><%= cl_image_tag product.photo.key, class: "front-picture"%></span>
            <span><%= cl_image_tag product.cover.key, class: "back-picture"%></span>
          <% end %>
        </div>
        <div class="bottom">
          <div style="display:flex;">
            <h6><strong><%= product.name %></strong></h6>
            <%= link_to line_items_path(product_id: product.id), method: :post do %>
              <i class="fas fa-cart-plus" id="icone"></i>
            <% end %>
          </div>
          <div style="display:flex;">
            <h5><%= product.price %>€</h5>
            <h5><%= link_to "en savoir +", product_path(product) %></h5>
          </div>
        </div>
      </div>
    <% else %>
      <div class="wrapper">
        <div class="top">
          <%= link_to product_path(product) do %>
            <span><%= cl_image_tag product.photo.key, class: "front-picture"%></span>
            <span><%= cl_image_tag product.cover.key, class: "back-picture"%></span>
          <% end %>
        </div>
        <div class="bottom">
          <div style="display:flex;">
            <h6><strong><%= product.name %></strong></h6>
            <!-- If quantity equal 0, Product cannot be added to a cart -->
          </div>
          <div style="display:flex;">
            <h5><%= product.price %>€</h5>
            <h5><%= link_to "en savoir +", product_path(product) %></h5>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
